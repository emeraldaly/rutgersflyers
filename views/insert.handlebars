<form method="POST" action="/review/{{ id }}">
              <input type="text" class="form-control"  placeholder="review" name="review">
              <input type="text" class="form-control" placeholder="rating" name="rating">
              <button type="submit" class="btn btn-default dataButton">submit review</button>
            </form>


            app.post('/reviews/:venueId', function(req, res) {
  Reviews.create({
review: req.body.review,
rating:req.body.rating,
    venueId: req.params.venueId
  }).then(function() {
    res.redirect('/persons');
  });
});

$( ".reviewButton" ).on("click", function(){
  closest( "form" ).show();
  })