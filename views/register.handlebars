<html>
	<head>
		<title> Register</title>
	</head>
	<body>
		<div class="container containernavpadding">
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<h3>Register for WhereRU</h3>
          <h4> {{msg}}</h4>
				</div>
			</div>
      <!-- <div class="col-md-3"></div> -->

				<div class="col-md-4 col-md-offset-4">
					<form role="form" method="post" onsubmit="return validateRegister()" action="/register">
						<div class="form-group">
							<label for="firstname">Username:</label>
							<input type="text" id="registerUsername" class="input-sm form-control" name="username">
						</div>
	<div class="form-group">
							<label for="firstname">First Name:</label>
							<input type="text" id="registerFirstname" class="input-sm form-control" name="fname">
						</div>
						<div class="form-group">
							<label for="lastname">Last Name:</label>   
							<input type="text" id="registerLastname" class="input-sm form-control" name="lname">
						</div>
						<div class="form-group">
							<label for="firstname">Email:</label>
							<input class="input-sm form-control" id="registerEmail" name="email">
						</div>
						<div class="form-group">
							<label for="Password">Password:</label>
							<input type="password" id="registerPassword" class="input-sm form-control"
              name="password">
						</div>
						<div class="buttonpad">
							<button type="submit" class="btn btn-info">Submit</button>
						</div>
					</form>
					<div id="registerValid"> </div>
				</div> <!-- close col -->

